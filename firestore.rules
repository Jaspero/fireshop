service cloud.firestore {
  function write() {
    return request.auth.token.role == 'write'
  }

  function read() {
    return request.auth.token.role == 'read'
  }

  function readOrWrite() {
    return write() || read()
  }

  match /databases/{database}/documents {

    match /settings/{setting} {
      allow read: if true
      allow write, delete: if write()
    }

    match /products-en/{product} {
  	  allow read: if resource.data.active == true || readOrWrite()
  	  allow write, delete: if write()
    }

    match /categories-en/{category} {
      allow read: if true
      allow write, delete: if write()
    }

    match /discounts-en/{discount} {
      allow read: if true
      allow write, delete: if write()
    }

    match /orders/{order} {
      allow read: if readWrite() || resource.data.customerId == auth.uid;
      allow write: if write() || resource.data.customerId == auth.uid;
    }

    match /customers/{customer} {
      allow read: if readWrite() || resource.data.customerId == auth.uid;
      allow write: if write() || resource.data.customerId == auth.uid;
    }

    match /reviews/{review} {
      allow read: if true
      allow write, delete: if resource.data.customerId == auth.uid;
    }
  }
}
